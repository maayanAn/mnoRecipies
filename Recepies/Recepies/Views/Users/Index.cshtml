@model IEnumerable<Recepies.Models.User>

@{
    ViewBag.Title = "Index";
}

<h2>All Users</h2>

<p>
    @{var sessionVar = (Recepies.Models.User)HttpContext.Current.Session["user"];
        if (sessionVar.IsManager)
        {
            @Html.ActionLink("Create New", "Register")            <span>&nbsp;</span>
            @Html.ActionLink("Search Users", "Search")
        } }
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Password)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsManager)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FullName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Password)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IsManager)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FullName)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>


