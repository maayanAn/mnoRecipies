<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - M.N.O Recipies</title>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/recipies.css" rel="stylesheet" />
    <link href="vendor/font-awesome/css/font-awesome.min.css" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Montserrat:400,700" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Lato:400,700,400italic,700italic" rel="stylesheet" type="text/css">
    <script src="~/Scripts/jquery-1.10.2.js"></script>
    <link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
    <script>
        $(function () {
            $("#dialog").dialog({
                autoOpen: false,
                show: {
                    effect: "blind",
                    duration: 1000
                },
                hide: {
                    effect: "explode",
                    duration: 1000
                }
            });

            $("#help").on("click", function () {
                $("#dialog").dialog("open");
            });
        });
    </script>
</head>

<body>
    <div id="dialog" title="Hello!" class="dialog-message">
        <p>This site created by m.n.o - We recommend to start by searching recipies with 'simple' difficulty.</p>
    </div>

    <!-- Navigation -->
    <nav id="mainNav" class="navbar navbar-default navbar-fixed-top navbar-custom">
        <div class="container">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header page-scroll">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                    <span class="sr-only">Toggle navigation</span> Menu <i class="fa fa-bars"></i>
                </button>
                <a class="navbar-brand" href="/Users?Length=8">M.N.O Recipies</a>
            </div>
            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav navbar-right">
                    <li class="hidden">
                        <a href="#page-top"></a>
                    </li>
                    @{var sessionVar = (Recepies.Models.User)HttpContext.Current.Session["user"];
                        if (sessionVar != null)
                        {
                            <li class="page-scroll">
                                <a id="help">?</a>
                            </li>
                            <li class="page-scroll">
                                @Html.ActionLink("About", "Index", "AboutSite")
                            </li>
                            <li class="page-scroll">
                                @Html.ActionLink("Statistics", "Stats", "Stats")
                            </li>
                            <li class="page-scroll">
                                @Html.ActionLink("Recipies", "Index", "Recipies")
                            </li>
                            <li class="page-scroll">
                                @Html.ActionLink("Users", "Index", "Users")
                            </li>
                            <li class="page-scroll">
                                @Html.ActionLink("Ingredients", "Index", "Ingredients")
                            </li>
                            <li>
                                @Html.ActionLink("LogOff", "Logoff", "Users", routeValues: null, htmlAttributes: new { id = "logoutLink" })
                            </li>
                        }
                        else
                        {
                            <li class="page-scroll">
                                @Html.ActionLink("Register", "Register", "Users", routeValues: null, htmlAttributes: new { id = "registerLink" })
                            </li>
                            <li>
                                @Html.ActionLink("Login", "Login", "Users", routeValues: null, htmlAttributes: new { id = "loginLink" })
                            </li>
                        } }
                </ul>
            </div>
            <!-- /.navbar-collapse -->
        </div>
        <!-- /.container-fluid -->
    </nav>

    <!-- Header -->
    <header>
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="intro-text">
                        <span class="name">M.N.O Recipies</span>
                        <span class="skills">All recipies in one place</span>
                    </div>
                </div>
            </div>
        </div>
    </header>

    <section id="portfolio">
        <div class="container">
            @RenderBody()
        </div>
    </section>

    <footer class="text-center">
        <div class="footer-above">
            <div class="container">
                <div class="row">
                    <div class="footer-col col-md-12 footer-text">
                        <i>"Food for the body is not enough. There must be food for the soul"</i> - Dorothy Day
                    </div>
                </div>
            </div>
        </div>
        <div class="footer-below">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12">
                        Copyright &copy; @DateTime.Now.Year - M.N.O web sites
                    </div>
                </div>
            </div>
        </div>
    </footer>

    @RenderSection("scripts", required: false)
</body>
</html>
